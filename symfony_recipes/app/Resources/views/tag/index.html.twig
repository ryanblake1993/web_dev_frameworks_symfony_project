{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tags list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Tag Votes</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.vote }}</td>
                <td>{{ tag.username.username }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tag_show', { 'id': tag.id }) }}">show</a>
                        </li>
                        {% if app.user %}
                            {# Do Nothing #}
                        {% elseif app.user  == tag.username.username %}
                            <li>
                                <a href="{{ path('tag_edit', { 'id': tag.id }) }}">edit</a>
                            </li>
                        {% endif %}
                    </ul>
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tag_upvote', { 'id': tag.id }) }}">Click for UpVote</a>
                        </li>
                        <br>
                        <li>
                            <a href="{{ path('tag_downvote', { 'id': tag.id }) }}">Click for DownVote</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tag_new') }}">Create a new tag</a>
        </li>
        <li>
            <a href="{{ path('homepage') }}">Homepage</a>
        </li>
    </ul>
{% endblock %}
